// License Manager v2 — Renewal 자동화 + 알림 + 문서 관리 + 보고서

generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model User {
  id             Int              @id @default(autoincrement())
  username       String           @unique
  password       String
  role           Role             @default(USER)
  isActive       Boolean          @default(true)
  createdAt      DateTime         @default(now())
  sessions       Session[]
  renewalEvents  RenewalEvent[]
  documents      Document[]
}

model Session {
  id        String   @id
  userId    Int
  expiresAt DateTime
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model License {
  id                 Int                  @id @default(autoincrement())
  name               String               @unique
  key                String?
  licenseType        LicenseType          @default(KEY_BASED)
  totalQuantity      Int
  price              Float?
  purchaseDate       DateTime
  expiryDate         DateTime?
  noticePeriodDays   Int?
  adminName          String?
  description        String?
  paymentCycle       PaymentCycle?
  quantity           Int?
  unitPrice          Float?
  currency           Currency             @default(KRW)
  exchangeRate       Float                @default(1.0)
  isVatIncluded      Boolean              @default(false)
  totalAmountForeign Float?
  totalAmountKRW     Float?
  // Phase 1: Renewal 필드
  firstPurchasedAt   DateTime?
  lastRenewedAt      DateTime?
  renewalDate        DateTime?
  renewalCycle       RenewalCycle         @default(ANNUAL)
  cycleMonths        Int?
  createdAt          DateTime             @default(now())
  updatedAt          DateTime             @updatedAt
  assignments        Assignment[]
  groupMembers       LicenseGroupMember[]
  seats              LicenseSeat[]
  renewalEvents      RenewalEvent[]
  notifications      NotificationLog[]
  documents          Document[]

  @@index([renewalDate])
}

model Employee {
  id          Int          @id @default(autoincrement())
  name        String
  department  String
  email       String?      @unique
  title       String?
  companyId   Int?
  orgId       Int?
  subOrgId    Int?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  assignments Assignment[]
  company     OrgCompany?  @relation(fields: [companyId], references: [id])
  org         OrgUnit?     @relation("OrgMembers", fields: [orgId], references: [id])
  subOrg      OrgUnit?     @relation("SubOrgMembers", fields: [subOrgId], references: [id])
}

// 회사 단위
model OrgCompany {
  id        Int        @id @default(autoincrement())
  name      String     @unique
  createdAt DateTime   @default(now())
  orgs      OrgUnit[]
  employees Employee[]
}

// 조직/하위조직 단위 (self-relation으로 계층 표현)
model OrgUnit {
  id         Int        @id @default(autoincrement())
  name       String
  companyId  Int
  parentId   Int?       // null이면 최상위 조직, 값이 있으면 하위조직
  createdAt  DateTime   @default(now())
  company    OrgCompany @relation(fields: [companyId], references: [id])
  parent     OrgUnit?   @relation("OrgHierarchy", fields: [parentId], references: [id])
  children   OrgUnit[]  @relation("OrgHierarchy")
  members    Employee[] @relation("OrgMembers")
  subMembers Employee[] @relation("SubOrgMembers")

  @@unique([name, companyId, parentId])
}

model LicenseSeat {
  id          Int          @id @default(autoincrement())
  licenseId   Int
  key         String?      @unique
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  assignments Assignment[]
  license     License      @relation(fields: [licenseId], references: [id], onDelete: Cascade)

  @@index([licenseId])
}

model Assignment {
  id           Int                 @id @default(autoincrement())
  licenseId    Int
  employeeId   Int
  seatId       Int?
  assignedDate DateTime            @default(now())
  returnedDate DateTime?
  reason       String?
  createdAt    DateTime            @default(now())
  seat         LicenseSeat?        @relation(fields: [seatId], references: [id])
  employee     Employee            @relation(fields: [employeeId], references: [id], onDelete: Cascade)
  license      License             @relation(fields: [licenseId], references: [id], onDelete: Cascade)
  histories    AssignmentHistory[]

  @@index([licenseId])
  @@index([employeeId])
  @@index([seatId])
}

model AssignmentHistory {
  id           Int         @id @default(autoincrement())
  assignmentId Int?
  licenseId    Int
  employeeId   Int
  action       String
  reason       String?
  createdAt    DateTime    @default(now())
  assignment   Assignment? @relation(fields: [assignmentId], references: [id])

  @@index([employeeId])
  @@index([licenseId])
}

model LicenseGroup {
  id          Int                  @id @default(autoincrement())
  name        String               @unique
  description String?
  isDefault   Boolean              @default(false)
  createdAt   DateTime             @default(now())
  updatedAt   DateTime             @updatedAt
  members     LicenseGroupMember[]
}

model LicenseGroupMember {
  id             Int          @id @default(autoincrement())
  licenseGroupId Int
  licenseId      Int
  createdAt      DateTime     @default(now())
  license        License      @relation(fields: [licenseId], references: [id], onDelete: Cascade)
  licenseGroup   LicenseGroup @relation(fields: [licenseGroupId], references: [id], onDelete: Cascade)

  @@unique([licenseGroupId, licenseId])
  @@index([licenseId])
}

model AuditLog {
  id         Int      @id @default(autoincrement())
  entityType String
  entityId   Int
  action     String
  actor      String?
  details    String?
  createdAt  DateTime @default(now())

  @@index([entityType, entityId])
  @@index([createdAt])
}

// Phase 1: 갱신 이벤트 기록
model RenewalEvent {
  id          Int       @id @default(autoincrement())
  licenseId   Int
  renewedAt   DateTime
  nextDueAt   DateTime
  note        String?
  createdBy   Int?
  createdAt   DateTime  @default(now())
  license     License   @relation(fields: [licenseId], references: [id], onDelete: Cascade)
  actor       User?     @relation(fields: [createdBy], references: [id])

  @@index([licenseId])
}

// Phase 1: 알림 발송 기록 (중복 방지)
model NotificationLog {
  id          Int              @id @default(autoincrement())
  licenseId   Int
  type        NotificationType
  sentAt      DateTime?
  status      NotifStatus      @default(PENDING)
  retryCount  Int              @default(0)
  errorMsg    String?
  targetEmail String
  createdAt   DateTime         @default(now())
  license     License          @relation(fields: [licenseId], references: [id], onDelete: Cascade)

  @@unique([licenseId, type, targetEmail])
  @@index([licenseId])
}

// Phase 2: 문서 관리
model Document {
  id          Int          @id @default(autoincrement())
  licenseId   Int
  type        DocumentType
  filename    String
  s3Key       String       @unique
  sizeBytes   Int?
  uploadedBy  Int
  createdAt   DateTime     @default(now())
  license     License      @relation(fields: [licenseId], references: [id], onDelete: Cascade)
  uploader    User         @relation(fields: [uploadedBy], references: [id])

  @@index([licenseId])
}

// Phase 3: 보고서 이력
model ReportHistory {
  id          Int          @id @default(autoincrement())
  period      String       // "2026-02" 형식
  format      String       @default("PDF")
  s3Key       String?
  status      ReportStatus @default(PENDING)
  errorMsg    String?
  generatedBy Int?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  @@unique([period, format])
  @@index([period])
}

enum Role {
  ADMIN
  USER
}

enum LicenseType {
  NO_KEY
  KEY_BASED
  VOLUME
}

enum PaymentCycle {
  MONTHLY
  YEARLY
}

enum Currency {
  KRW
  USD
  EUR
  JPY
  GBP
  CNY
}

enum RenewalCycle {
  MONTHLY
  ANNUAL
  CUSTOM
  MANUAL
}

enum NotificationType {
  D60
  D30
}

enum NotifStatus {
  PENDING
  SENT
  FAILED
  SKIPPED
}

enum DocumentType {
  CONTRACT
  QUOTE
  OTHER
}

enum ReportStatus {
  PENDING
  RUNNING
  SUCCESS
  FAILED
}
