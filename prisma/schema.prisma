// 변경: datasource url 추가, User 미사용 필드(googleId/email/name) 제거, OrgCompany/OrgUnit 모델 추가, Employee 조직 계층 필드 추가

generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model User {
  id        Int       @id @default(autoincrement())
  username  String    @unique
  password  String
  role      Role      @default(USER)
  isActive  Boolean   @default(true)
  createdAt DateTime  @default(now())
  sessions  Session[]
}

model Session {
  id        String   @id
  userId    Int
  expiresAt DateTime
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model License {
  id                 Int                  @id @default(autoincrement())
  name               String               @unique
  key                String?
  licenseType        LicenseType          @default(KEY_BASED)
  totalQuantity      Int
  price              Float?
  purchaseDate       DateTime
  expiryDate         DateTime?
  noticePeriodDays   Int?
  adminName          String?
  description        String?
  paymentCycle       PaymentCycle?
  quantity           Int?
  unitPrice          Float?
  currency           Currency             @default(KRW)
  exchangeRate       Float                @default(1.0)
  isVatIncluded      Boolean              @default(false)
  totalAmountForeign Float?
  totalAmountKRW     Float?
  createdAt          DateTime             @default(now())
  updatedAt          DateTime             @updatedAt
  assignments        Assignment[]
  groupMembers       LicenseGroupMember[]
  seats              LicenseSeat[]
}

model Employee {
  id          Int          @id @default(autoincrement())
  name        String
  department  String
  email       String?      @unique
  title       String?
  companyId   Int?
  orgId       Int?
  subOrgId    Int?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  assignments Assignment[]
  company     OrgCompany?  @relation(fields: [companyId], references: [id])
  org         OrgUnit?     @relation("OrgMembers", fields: [orgId], references: [id])
  subOrg      OrgUnit?     @relation("SubOrgMembers", fields: [subOrgId], references: [id])
}

// 회사 단위
model OrgCompany {
  id        Int        @id @default(autoincrement())
  name      String     @unique
  createdAt DateTime   @default(now())
  orgs      OrgUnit[]
  employees Employee[]
}

// 조직/하위조직 단위 (self-relation으로 계층 표현)
model OrgUnit {
  id         Int        @id @default(autoincrement())
  name       String
  companyId  Int
  parentId   Int?       // null이면 최상위 조직, 값이 있으면 하위조직
  createdAt  DateTime   @default(now())
  company    OrgCompany @relation(fields: [companyId], references: [id])
  parent     OrgUnit?   @relation("OrgHierarchy", fields: [parentId], references: [id])
  children   OrgUnit[]  @relation("OrgHierarchy")
  members    Employee[] @relation("OrgMembers")
  subMembers Employee[] @relation("SubOrgMembers")

  @@unique([name, companyId, parentId])
}

model LicenseSeat {
  id          Int          @id @default(autoincrement())
  licenseId   Int
  key         String?      @unique
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  assignments Assignment[]
  license     License      @relation(fields: [licenseId], references: [id], onDelete: Cascade)

  @@index([licenseId])
}

model Assignment {
  id           Int                 @id @default(autoincrement())
  licenseId    Int
  employeeId   Int
  seatId       Int?
  assignedDate DateTime            @default(now())
  returnedDate DateTime?
  reason       String?
  createdAt    DateTime            @default(now())
  seat         LicenseSeat?        @relation(fields: [seatId], references: [id])
  employee     Employee            @relation(fields: [employeeId], references: [id], onDelete: Cascade)
  license      License             @relation(fields: [licenseId], references: [id], onDelete: Cascade)
  histories    AssignmentHistory[]

  @@index([licenseId])
  @@index([employeeId])
  @@index([seatId])
}

model AssignmentHistory {
  id           Int         @id @default(autoincrement())
  assignmentId Int?
  licenseId    Int
  employeeId   Int
  action       String
  reason       String?
  createdAt    DateTime    @default(now())
  assignment   Assignment? @relation(fields: [assignmentId], references: [id])

  @@index([employeeId])
  @@index([licenseId])
}

model LicenseGroup {
  id          Int                  @id @default(autoincrement())
  name        String               @unique
  description String?
  isDefault   Boolean              @default(false)
  createdAt   DateTime             @default(now())
  updatedAt   DateTime             @updatedAt
  members     LicenseGroupMember[]
}

model LicenseGroupMember {
  id             Int          @id @default(autoincrement())
  licenseGroupId Int
  licenseId      Int
  createdAt      DateTime     @default(now())
  license        License      @relation(fields: [licenseId], references: [id], onDelete: Cascade)
  licenseGroup   LicenseGroup @relation(fields: [licenseGroupId], references: [id], onDelete: Cascade)

  @@unique([licenseGroupId, licenseId])
  @@index([licenseId])
}

model AuditLog {
  id         Int      @id @default(autoincrement())
  entityType String
  entityId   Int
  action     String
  actor      String?
  details    String?
  createdAt  DateTime @default(now())

  @@index([entityType, entityId])
  @@index([createdAt])
}

enum Role {
  ADMIN
  USER
}

enum LicenseType {
  NO_KEY
  KEY_BASED
  VOLUME
}

enum PaymentCycle {
  MONTHLY
  YEARLY
}

enum Currency {
  KRW
  USD
  EUR
  JPY
  GBP
  CNY
}
