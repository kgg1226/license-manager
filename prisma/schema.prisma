// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
}

enum Role {
  ADMIN
  USER
}

// ===== User =====
model User {
  id        Int       @id @default(autoincrement())
  username  String    @unique
  password  String
  email     String?   @unique
  name      String?
  role      Role      @default(USER)
  googleId  String?   @unique
  createdAt DateTime  @default(now())

  sessions  Session[]
}

// ===== Session =====
model Session {
  id        String   @id // UUID
  userId    Int
  expiresAt DateTime
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

// ===== License =====
model License {
  id               Int          @id @default(autoincrement())
  name             String
  key              String?
  isVolumeLicense  Boolean      @default(false)
  totalQuantity    Int
  price            Float?
  purchaseDate     DateTime
  expiryDate       DateTime?
  contractDate     DateTime?
  noticePeriodDays Int?
  adminName        String?
  description      String?
  createdAt        DateTime     @default(now())
  updatedAt        DateTime     @updatedAt

  assignments      Assignment[]
  seats            LicenseSeat[]
  groupMembers     LicenseGroupMember[]
}

// ===== Employee =====
model Employee {
  id         Int          @id @default(autoincrement())
  name       String
  department String
  email      String?      @unique
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt

  assignments Assignment[]
}

// ===== LicenseSeat =====
model LicenseSeat {
  id        Int      @id @default(autoincrement())
  licenseId Int
  key       String?  @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  license     License      @relation(fields: [licenseId], references: [id], onDelete: Cascade)
  assignments Assignment[]

  @@index([licenseId])
}

// ===== Assignment =====
model Assignment {
  id           Int       @id @default(autoincrement())
  licenseId    Int
  employeeId   Int
  seatId       Int?
  assignedDate DateTime  @default(now())
  returnedDate DateTime?
  reason       String?
  createdAt    DateTime  @default(now())

  license  License      @relation(fields: [licenseId], references: [id], onDelete: Cascade)
  employee Employee     @relation(fields: [employeeId], references: [id], onDelete: Cascade)
  seat     LicenseSeat? @relation(fields: [seatId], references: [id], onDelete: SetNull)

  histories AssignmentHistory[]

  @@index([licenseId])
  @@index([employeeId])
  @@index([seatId])
}

// ===== AssignmentHistory =====
model AssignmentHistory {
  id           Int      @id @default(autoincrement())
  assignmentId Int?
  licenseId    Int
  employeeId   Int
  action       String   // ASSIGNED | RETURNED | REVOKED
  reason       String?
  createdAt    DateTime @default(now())

  assignment Assignment? @relation(fields: [assignmentId], references: [id], onDelete: SetNull)

  @@index([employeeId])
  @@index([licenseId])
}

// ===== LicenseGroup =====
model LicenseGroup {
  id          Int       @id @default(autoincrement())
  name        String    @unique
  description String?
  isDefault   Boolean   @default(false)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  members LicenseGroupMember[]
}

// ===== LicenseGroupMember =====
model LicenseGroupMember {
  id             Int      @id @default(autoincrement())
  licenseGroupId Int
  licenseId      Int
  createdAt      DateTime @default(now())

  licenseGroup LicenseGroup @relation(fields: [licenseGroupId], references: [id], onDelete: Cascade)
  license      License      @relation(fields: [licenseId], references: [id], onDelete: Cascade)

  @@unique([licenseGroupId, licenseId])
  @@index([licenseId])
}

// ===== AuditLog =====
model AuditLog {
  id         Int      @id @default(autoincrement())
  entityType String   // LICENSE | EMPLOYEE | ASSIGNMENT | SEAT
  entityId   Int
  action     String   // CREATED | UPDATED | DELETED | ASSIGNED | UNASSIGNED | REVOKED | IMPORTED
  actor      String?
  details    String?  // JSON
  createdAt  DateTime @default(now())

  @@index([entityType, entityId])
  @@index([createdAt])
  @@index([action])
}